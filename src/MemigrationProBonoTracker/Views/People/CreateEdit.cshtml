@model MemigrationProBonoTracker.Models.PersonViewModel.PersonEditViewModel

<form asp-action="Edit">
    <div class="form-horizontal">

        <input type="hidden" asp-for="@Model.Person.Id" />
        <div class="row panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Person</h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <label asp-for="@Model.Person.FirstName" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.Person.FirstName" class="form-control" />
                            <span asp-validation-for="@Model.Person.FirstName" class="text-danger" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label asp-for="@Model.Person.LastName" class="col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.Person.LastName" class="form-control" />
                            <span asp-validation-for="@Model.Person.LastName" class="text-danger" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <label asp-for="@Model.Person.DateOfBirth" class="col-md-2 "></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.Person.DateOfBirth" class="form-control datepickerpast" />
                            <span asp-validation-for="@Model.Person.DateOfBirth" class="text-danger" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label asp-for="@Model.Person.Gender" class="col-md-2 "></label>
                        <div class="col-md-10">
                            <select asp-for="@Model.Person.Gender" asp-items="Html.GetEnumSelectList<Enums.Gender>()" class="form-control"></select>
                            <span asp-validation-for="@Model.Person.Gender" class="text-danger" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <label asp-for="@Model.Person.Nationality" class="col-md-2 "></label>
                        <div class="col-md-10">
                            <select asp-for="@Model.Person.Nationality" asp-items="Html.GetEnumSelectList<Enums.NationalOrigin>()" class="form-control"></select>
                            <span asp-validation-for="@Model.Person.Nationality" class="text-danger" />
                        </div>
                    </div>
                    <div class="col-lg-6">&nbsp;</div>
                </div>
            </div>
        </div>



        <div class="row panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Case Notes</h2>
            </div>
            <div class="panel-body">
                <div class="col-lg-12 textwrapper">
                    <textarea cols="2" rows="8" asp-for="@Model.Person.Notes" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Person.Notes" class="text-danger" />
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12 form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>