@model MemigrationProBonoTracker.Models.PersonViewModel.PersonDetailsViewModel

<input type="hidden" asp-for="@Model.Person.Id" />
<div class="row">
    <div class="col-md-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">@Html.DisplayFor(x => x.Person.FullName)</h2>
            </div>
            <div class="panel-body">
                <dl>
                    <dt></dt>
                    <dd>
                        @Html.DisplayFor(x => x.Person.DateOfBirth)<br />
                        @Html.DisplayFor(x => x.Person.Gender) <br />
                        @Html.DisplayFor(x => x.Person.Nationality)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Associated People</h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    @foreach (var assPerson in Model.AssociatedPeople)
                {
                    <div class="col-md-2">
                        <a asp-controller="People" asp-action="Details" asp-route-id="@assPerson.AssociatedPersonId"><strong>@assPerson.FullName</strong></a><br/>
                        @assPerson.Relation
                    </div>
                }
            </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Phone Numbers</h2>
            </div>
            <div class="panel-body">
                @foreach (var phone in Model.Person.PhoneList)
                {
                    <address class="col-md-6">
                        <strong>@phone.Type</strong><br />
                        @phone.Number
                    </address>


                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Address</h2>
            </div>
            <div class="panel-body">
                @foreach (var address in Model.Person.AddressList)
                {
                    <address class="col-md-6">
                        <strong>@Html.DisplayFor(a => address.StreetAddress)</strong><br />
                        @Html.DisplayFor(a => address.City) @Html.DisplayFor(a => address.State) @Html.DisplayFor(a => address.ZipCode)<br />
                        @Html.DisplayFor(a => address.Country)
                    </address>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Cases</h2>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover">

                    <thead>
                        <tr>
                            <th>Case Type</th>
                            <th>Assigning Attorney Name</th>
                            <th>Volunteer Attorney Name</th>
                            <th>Next Case Event</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var caseItem in Model.Cases.Cases)
                        {
                            <tr>
                                <td>@caseItem.CaseType</td>
                                <td>@caseItem.AssigningAttorneyName</td>
                                <td>@caseItem.VolunteerAttorneyName</td>
                                <td>@caseItem.NextCaseEventString @caseItem.NextCaseDateString</td>
                                <td><a class="btn btn-default" asp-controller="Case" asp-action="Details" asp-route-id="@caseItem.CaseId">Case Details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title">Person Notes</h2>
            </div>
            <div class="panel-body">
                <div class="col-lg-12 textwrapper">
                    <textarea cols="2" rows="8" asp-for="@Model.Person.Notes" class="form-control" readonly="readonly"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary" asp-action="CreateEdit" asp-route-id="@Model.Person.Id">Edit</a>
        <a class="btn btn-default pull-right" asp-action="Index">Back to List</a>
    </div>
</div>
