@model MemigrationProBonoTracker.Models.AttorneyViewModels.AttorneyContactInfoViewModel


<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">@Model.AttorneyName</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-6">
                    <ul>

                        <li>@Html.DisplayFor(i => i.PhoneNumbers.Number) -  @Html.DisplayFor(i => i.PhoneNumbers.Type)</li>

                    </ul>
                    <ul>

                        <li> <strong>@Html.DisplayFor(x => x.Email.Address)</strong></li>

                    </ul>
                </div>
                <div class="col-md-6">
                    <ul>

                        <li>
                            <address>
                                @Html.DisplayFor(i => i.AttorneyAddresses.StreetAddress)<br />
                                @Html.DisplayFor(i => i.AttorneyAddresses.City) @Html.DisplayFor(i => i.AttorneyAddresses.State), @Html.DisplayFor(i => i.AttorneyAddresses.ZipCode)<br />
                            </address>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.DisplayFor(a => a.Notes)
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col-md-12"><button type="button" class="btn btn-primary" data-dismiss="modal">Close</button></div>
        </div>
    </div>
</div>

<script>
    $().ready(function () {
        $('#modalWrapper').modal('show');
    });
</script>