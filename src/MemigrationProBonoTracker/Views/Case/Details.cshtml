@model Case



<div class="row ">
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Lead Client</h3>
            </div>
            <div class="panel-body">
                <div class="col-lg-3">
                    @Html.LabelFor(x => x.LeadClient.FullName) <br />
                    @Html.DisplayFor(x => x.LeadClient.FullName)
                </div>

                <div class="col-lg-2">
                    @Html.LabelFor(x => x.LeadClient.Age)<br />
                    @Html.DisplayFor(x => x.LeadClient.Age)
                </div>
                <div class="col-lg-3">
                    @Html.LabelFor(x => x.LeadClient.Gender)<br />
                    @Html.DisplayFor(x => x.LeadClient.Gender)
                </div>

                <div class="col-lg-3">
                    @Html.LabelFor(x => x.LeadClient.Nationality)<br />
                    @Html.DisplayFor(x => x.LeadClient.Nationality)
                </div>

                <div class="col-lg-1">
                    <button type="button" onclick="PersonContactInfoModal(@Model.LeadClient.Id)" class="pull-right btn btn-primary"><span class="glyphicon glyphicon-certificate"></span></button>
                </div>

                <div class="col-lg-12">
                    @Html.LabelFor(x => x.LeadClient.Notes)
                    <textarea style="max-width: 1080px" readonly cols="2" rows="8" asp-for="CaseNotes" class="form-control"></textarea>
                </div>
            </div>
        </div>
    </div>


    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Volunteer Attorney</h3>
            </div>
            @if (Model.VolunteerAttorney != null)
            {
                <div class="panel-body">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.VolunteerAttorney.FullName) <br />
                        @Html.DisplayFor(x => x.VolunteerAttorney.FullName)
                    </div>

                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.VolunteerAttorney.Gender)<br />
                        @Html.DisplayFor(x => x.VolunteerAttorney.Gender)
                    </div>
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.VolunteerAttorney.OrganizationName)<br />
                        @Html.DisplayFor(x => x.VolunteerAttorney.OrganizationName)
                    </div>
                    <div class="col-lg-3">
                        <button type="button" onclick="AttorneyContactInfoModal(@Model.VolunteerAttorney.Id)" class="pull-right btn btn-primary"><span class="glyphicon glyphicon-certificate"></span></button>
                    </div>


                    <div class="col-lg-12">
                        @Html.LabelFor(x => x.LeadClient.Notes)
                        <textarea style="max-width: 1080px" readonly cols="2" rows="8" asp-for="CaseNotes" class="form-control"></textarea>
                    </div>
                </div>
            }
            else
            {
                <div class="panel-body">
                    <div class="alert alert-warning">
                        <h4>No Volunteer Attorney!</h4>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Associated People</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Relationship</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var person in Model.AssociatedPeopleList)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => person.Person.FullName)</td>
                                <td>@Html.DisplayFor(x => person.Relationship)</td>
                                <td>
                                    <button type="button" class="btn btn-primary" onclick="PersonContactInfoModal(@person.Person.Id)">
                                        <span class="glyphicon glyphicon-certificate"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"></h3>
            </div>
            <div class="panel-body">
            </div>
        </div>
    </div>
</div>





<div id="modalWrapper" class="modal fade" tabindex="-1" role="dialog"></div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<script>
    $(function () {
    });
</script>
