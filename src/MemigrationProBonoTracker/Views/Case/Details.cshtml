@model MemigrationProBonoTracker.Models.CaseViewModels.CaseDetailsViewModel
<div class="row ">
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Lead Client</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.Case.LeadClient.FullName) <br />
                        @Html.DisplayFor(x => x.Case.LeadClient.FullName)
                    </div>
                    <div class="col-lg-2">
                        @Html.LabelFor(x => x.Case.LeadClient.Age)<br />
                        @Html.DisplayFor(x => x.Case.LeadClient.Age)
                    </div>
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.Case.LeadClient.Gender)<br />
                        @Html.DisplayFor(x => x.Case.LeadClient.Gender)
                    </div>

                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.Case.LeadClient.Nationality)<br />
                        @Html.DisplayFor(x => x.Case.LeadClient.Nationality)
                    </div>
                    <div class="col-lg-1">
                        <button type="button" onclick="PersonContactInfoModal(@Model.Case.LeadClient.Id)" class="pull-right btn btn-primary"><span class="glyphicon glyphicon-certificate"></span></button>
                    </div>
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.Case.Type)<br />
                        @Html.DisplayFor(x => x.Case.Type)
                    </div>
                    <div class="col-lg-3">
                        @Html.LabelFor(x => x.Case.Active)<br />
                        @(Model.Case.Active ? "Open" : "Closed")
                    </div>
                </div>
                <div class="col-lg-12">
                    @Html.LabelFor(x => x.Case.CaseNotes)
                    <textarea style="max-width: 1080px" readonly cols="2" rows="8" asp-for="@Model.Case.CaseNotes" class="form-control"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Volunteer Attorney</h3>
            </div>
            @if (Model.Case.VolunteerAttorney != null)
            {
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-3">
                            @Html.LabelFor(x => x.Case.VolunteerAttorney.FullName) <br />
                            @Html.DisplayFor(x => x.Case.VolunteerAttorney.FullName)
                        </div>
                        <div class="col-lg-3">
                            @Html.LabelFor(x => x.Case.AttorneyWorkedHours)
                            @Html.DisplayFor(x => x.Case.AttorneyWorkedHours)
                        </div>
                        <div class="col-lg-3">
                            @Html.LabelFor(x => x.Case.VolunteerAttorney.OrganizationName)<br />
                            @Html.DisplayFor(x => x.Case.VolunteerAttorney.OrganizationName)
                        </div>
                        <div class="col-lg-3">
                            <button type="button" onclick="AttorneyContactInfoModal(@Model.Case.VolunteerAttorney.Id)" class="pull-right btn btn-primary"><span class="glyphicon glyphicon-certificate"></span></button>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        @Html.LabelFor(x => x.Case.VolunteerAttorney.Notes)
                        <textarea style="max-width: 1080px" readonly cols="2" rows="8" asp-for="@Model.Case.VolunteerAttorney.Notes" class="form-control"></textarea>
                    </div>
                </div>
            }
            else
            {
                <div class="panel-body">
                    <div class="alert alert-warning">
                        <h4>No Volunteer Attorney.</h4>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="row ">
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Associated People</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Relationship</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var person in Model.Case.AssociatedPeopleList)
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => person.Person.FullName)</td>
                                <td>@Html.DisplayFor(x => person.Relationship)</td>
                                <td>
                                    <button type="button" class="btn btn-primary" onclick="PersonContactInfoModal(@person.Person.Id)">
                                        <span class="glyphicon glyphicon-certificate"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Case Events</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Event</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var caseEvent in Model.Case.CaseEvents.OrderBy(e => e.EventDate))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(x => caseEvent.EventDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => caseEvent.Event)
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row ">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Contact Log</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var logEntry in Model.ContactLogEntries.OrderBy(l=>l.EntryDate))
                        {
                            <tr>
                                <td>@Html.DisplayFor(x => logEntry.EntryDate)</td>
                                <td>@Html.DisplayFor(x => logEntry.EntryNotes)</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>





<div id="modalWrapper" class="modal fade" tabindex="-1" role="dialog"></div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Case.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<script>
    $(function () {
    });
</script>
